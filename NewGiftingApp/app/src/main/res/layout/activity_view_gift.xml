    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Back"
        android:id="@+id/giftSelBack"
        android:background="@drawable/tbutton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="New Text"
        android:background="@drawable/textview"
        android:id="@+id/giftSelAmount"
        android:hint="Amount"
        android:gravity="center"
        android:textStyle="bold"
        android:cursorVisible="false"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/giftSelChat"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/giftSelChatText"
        android:background="@drawable/textview"
        android:hint="Type message here"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/imgSelGift"
        android:layout_alignStart="@+id/imgSelGift" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Send"
        android:id="@+id/giftSelChatSend"
        android:background="@drawable/tbutton"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/giftSelChatText"
        android:layout_toEndOf="@+id/giftSelChatText"
        android:layout_marginLeft="10dp"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:id="@+id/giftSelChat"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/giftSelBack"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:dividerHeight="0dp"
        android:divider="#00000000"
        android:transcriptMode="alwaysScroll"
        />

</RelativeLayout>
